<%= render 'shared/errors', obj: @quaderni %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
        <h3 class="card-title text-center"><%= @quaderni.new_record? ? "Add quaderno" : "Edit quaderno" %></h3>
        <%= form_with(model: quaderni) do |form| %>

          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :release_date %>
            <%= form.date_field :release_date, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :speaker %>
            <%= form.collection_select( :speaker_id, Speaker.all, :id, :speaker_name, {:prompt => "Please Select"}, {:class => 'form-control'}) %>
          </div>

          <div class="custom-file">
            <%= form.label :file_doc, "Document",class:"custom-file-label" %>
            <%= form.file_field :file_doc, class:"custom-file-input" %>
          </div>

          <div class="clearfix"><br /></div>

          <div class="row justify-content-center">
            <%= form.button(@quaderni.new_record? ? 'Create quaderno <i class="fas fa-paper-plane"></i>'.html_safe : 'Update quaderno <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-primary') %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
