<h1 align="center">Ultime notizie </h1>
<div class="clear-fix"><br><br></div>
<div class="card-columns ">

<% @posts.each do |post|%>

  <div class="card">
    <% if post.post_img.url%>
    <%= image_tag post.post_img.url(:preview), class:"card-img-top" %>
    <% end %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>

      <p class="card-text"><%= (strip_tags( post.post_desc)).truncate_words(20) %></p>

      <p class=" card-text text-right"><%= link_to "Read More", post_path(post), class:"btn btn-primary btn-sm" %></p>
      <p class="card-text "><small class="text-muted">Created <%= time_ago_in_words(post.created_at)%> ago</small></p>
    </div>
  </div>

<% end %>
</div>
