<h1 align="center">Categories<%= link_to 'New Category', new_category_path, class:"btn btn-outline-success float-right btn-sm" %></h1>
<div class="clear-fix"><br></div>
<table class="table"
  <thead>
    <tr>
      <th>Category name</th>
      <th>Category image</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.category_name %></td>
        <td><%= image_tag category.category_img.url(:thumb) %></td>
        <td><%= link_to '<i class="fas fa-eye"></i> View'.html_safe, category, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_category_path(category), class: 'btn btn-outline-success btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, category, method: :delete,
                         data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
