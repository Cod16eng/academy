<%= render 'shared/errors', obj: @category %>
<div class="row">
  <div class="col-8 offset-2">
    <div class="card">
      <div class="card-body">
        <h3 class="card-title text-center"><%= @category.new_record? ? "Add category" : "Edit category" %></h3>
          <%= form_with(model: category, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :category_name %>
              <%= form.text_field :category_name, class:'form-control' %>
            </div>
            <div class="custom-file">
              <%= form.label :category_img, class:'custom-file-label' %>
              <%= form.file_field :category_img, class:'custom-file-input' %>
            </div>

            <div class="clearfix"><br /></div>

            <div class="row justify-content-center">
              <%= form.button(@category.new_record? ? 'Create category <i class="fas fa-paper-plane"></i>'.html_safe : 'Update category <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-primary') %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
