<h1 align="center">Uploads<%= link_to 'New Upload', new_upload_path, class:"btn btn-outline-success float-right btn-sm" %></h1>
<div class="clear-fix"><br></div>
  <table class="table">
    <thead>
      <tr>
        <th>Upload</th>
        <th>Webinar</th>
        <th>Speaker</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @uploads.each do |upload| %>
        <tr>
          <td><%=link_to "Scarica le slide", upload.upload_url %></td>
          <td><%= upload.webinar.title %></td>
          <td><%= upload.speaker.speaker_name %></td>
          <td><%= link_to '<i class="fas fa-eye"></i> View'.html_safe, upload, class: 'btn btn-outline-primary btn-sm' %></td>
          <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_upload_path(upload), class: 'btn btn-outline-success btn-sm' %></td>
          <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, upload, method: :delete,
                           data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-sm'  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
