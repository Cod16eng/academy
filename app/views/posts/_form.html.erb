<%= render 'shared/errors', obj: @post %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title text-center"><%= @post.new_record? ? "Add article" : "Edit article" %></h3>
            <%= form_with(model: post, local: true, html: {class: "col-md-12" }) do |form| %>
              <div class="form-group">
                <%= form.label :title %>
                <%= form.text_field :title, class: "form-control" %>
              </div>

              <div class="form-group">
                <%= form.label :post_desc %>
                <%= form.trix_editor :post_desc, autofocus: true, data: { coffee: :delicious } %>
              </div>

              <div class="custom-file">
                <%= form.label :post_img, class: "custom-file-label" %>
                <%= form.file_field :post_img, class: "custom-file-input" %>
              </div>

              <div class="clearfix"><br /></div>

              <div class="row justify-content-center">
                <%= form.button(@post.new_record? ? 'Create article <i class="fas fa-paper-plane"></i>'.html_safe : 'Update article <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-primary') %>
              </div>
            <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
