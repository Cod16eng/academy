<h1 align="center">Articles<%= link_to 'New Post', new_post_path, class:"btn btn-outline-success float-right btn-sm" %></h1>
<div class="clear-fix"><br></div>
<%= will_paginate(@posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center d-flex') %>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Post author</th>
      <th>Post date</th>
      <th>Post img</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td style="width: 200px;"><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.created_at.strftime("%a, %-d %b, %Y") %></td>
        <td><%= image_tag post.post_img.url(:thumb) %></td>
        <td><%= link_to '<i class="fas fa-eye"></i> View'.html_safe, post, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_post_path(post), class: 'btn btn-outline-success btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, post, method: :delete,
                         data: { confirm: 'Are you sure?'}, class: 'btn btn-outline-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate(@posts, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center d-flex') %>
