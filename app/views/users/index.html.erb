<div class="row">

	<div class="col-md-12 col-sm-6">
		<h3 class="text-center">All Users</h3><div><p><%= link_to '<i class="fas fa-user-plus"></i> New User'.html_safe, new_user_path, class: 'btn btn-outline-primary btn-sm float-right' %><br><br></p></div>

<%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center d-flex') %>
<table class="table">
	<thead class="text-center">
	  <tr>
	      <th>Full Name</th>
				<th>UserName</th>
	      <th>Email</th>
	      <th colspan="3">Actions</th>
	  </tr>
	</thead>

	<tbody>

<% @users.each do |user| %>
      <tr>
	    <td><%= user.name %></td>
			<td><%= user.username %></td>
	    <td><%= user.email %></td>
			<td><%= link_to '<i class="fas fa-eye"></i> View profile'.html_safe, user_path(user), class: 'btn btn-outline-primary btn-sm'  %></td>
	    <td><%= link_to '<i class="fas fa-user-edit"></i> Edit profile'.html_safe, edit_user_path(user), class: 'btn btn-outline-success btn-sm'  %></td>
	    <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, user_path(user), method: :delete,
  					    data:{confirm: "Are you sure"}, class: 'btn btn-outline-danger btn-sm'  %></td>

	  </tr>
<% end %>
	</tbody>
</table>
</div>
<%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center d-flex') %>
</div>
