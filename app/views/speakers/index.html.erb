<% if current_user && current_user.admin %>
<h1 class="text-center">Relatori<%= link_to 'New Speaker', new_speaker_path, class:"btn btn-outline-success float-right btn-sm" %></h1>
<% else %>
<h1 class="text-center">Relatori</h1>
<% end %>
<div class="clear-fix"><br></div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Profession</th>
      <th>Avatar</th>
      <% if current_user && current_user.admin %>
      <th colspan="3" class="text-center">Actions</th>
      <% else %>
      <th class="text-center">Action</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @speakers.each do |speaker| %>
      <tr>
        <td><%= speaker.speaker_name %></td>
        <td><%= speaker.profession_1 %><br><%= speaker.profession_2 %></td>
        <td><%=image_tag speaker.speaker_img.url(:thumb), size: "76x76" %></td>
        <td><%= link_to '<i class="fas fa-eye"></i> View'.html_safe, speaker, class:"btn btn-outline-primary btn-sm" %></td>
        <% if current_user && current_user.admin %>
        <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_speaker_path(speaker), class:"btn btn-outline-success btn-sm" %></td>
        <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, speaker, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
