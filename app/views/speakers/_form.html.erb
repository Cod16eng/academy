<%= render 'shared/errors', obj: @speaker %>
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title text-center"><%= @speaker.new_record? ? "Add speaker" : "Edit speaker" %></h3>
          <%= form_with(model: speaker, local: true) do |form| %>

            <div class="form-group">
              <%= form.label :first_name %>
              <%= form.text_field :first_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :last_name %>
              <%= form.text_field :last_name, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :profession_1 %>
              <%= form.text_field :profession_1, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :profession_2 %>
              <%= form.text_field :profession_2, class: "form-control" %>
            </div>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.trix_editor :description %>
            </div>

            <div class="custom-file">
              <%= form.label :speaker_img, class: "custom-file-label" %>
              <%= form.file_field :speaker_img, class: "custom-file-input" %>
            </div>
            <div class="clearfix"><br /></div>

            <div class="row justify-content-center">
              <%= form.button(@speaker.new_record? ? 'Create Speaker <i class="fas fa-paper-plane"></i>'.html_safe : 'Update Sepeaker <i class="fas fa-paper-plane"></i>'.html_safe, class: 'btn btn-primary') %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
