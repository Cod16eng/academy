<h1 align="center">Webinars<%= link_to 'New Webinar', new_webinar_path, class:"btn btn-outline-success float-right btn-sm" %></h1>
<div class="clear-fix"><br></div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Date from</th>
      <th>Date to</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @webinars.each do |webinar| %>
      <tr>
        <td><%= webinar.title %></td>
        <td><%= webinar.date_from.strftime('%e - %b - %Y') %><br>
            <%= webinar.date_from.strftime('%A - %H : %M') %></td>
        <td><%= webinar.date_to.strftime('%e - %b - %Y') %><br>
            <%= webinar.date_to.strftime('%A - %H : %M') %></td>
        <td><%= webinar.category.category_name %></td>
        <td><%= webinar.user.name %></td>
        <td><%= link_to '<i class="fas fa-eye"></i> View'.html_safe, webinar, class: 'btn btn-outline-primary btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-edit"></i> Edit'.html_safe, edit_webinar_path(webinar), class: 'btn btn-outline-success btn-sm' %></td>
        <td><%= link_to '<i class="fas fa-user-times"></i> Delete'.html_safe, webinar, method: :delete,
          data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger btn-sm' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
